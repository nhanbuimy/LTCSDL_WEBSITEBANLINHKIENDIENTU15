@model int
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    string controllerName = ViewData["ControllerName"] as string;
}
<td style="width: 150px">
    <div class="btn-group">
        <a asp-action="Edit" asp-controller="@controllerName" class="btn redShop" style="color: white" asp-route-id="@Model">
            <i class="fa-regular fa-pen-to-square"></i>
        </a>
        <a asp-action="Details" asp-controller="@controllerName" class="btn btn-black" asp-route-id="@Model">
            <i class="fa-solid fa-list"></i>
        </a>
        <a asp-action="Delete" asp-controller="@controllerName" class="btn btn-gold" asp-route-id="@Model">
            <i class="fa-regular fa-trash-can"></i>
        </a>
    </div>
</td>