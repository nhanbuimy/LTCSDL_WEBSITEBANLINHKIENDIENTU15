@model string
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    string controllerName = ViewData["ControllerName"] as string;
}
<div class="btn-group">
    <a asp-action="Edit" asp-controller="@controllerName" class="btn btn-primary" asp-route-id="@Model">
        <i class="fa-regular fa-pen-to-square"></i>
    </a>
    <a asp-action="Details" asp-controller="@controllerName" class="btn btn-success" asp-route-id="@Model">
        <i class="fa-solid fa-list"></i>
    </a>
    <a asp-action="Lockout" asp-controller="@controllerName" class="btn btn-danger" asp-route-id="@Model">
        <i class="fa-solid fa-trash-can"></i>
    </a>
</div>