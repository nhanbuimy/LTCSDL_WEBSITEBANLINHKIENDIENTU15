@model WebsiteBanLinhKienDienTu15.Models.Category
@{
	ViewData["Title"] = "Edit";
}
<br />

<h2 class="text-light">Edit Category</h2>
<form asp-action="Edit" method="post">
	<div class="p-4 rounded border">
		<input type="hidden" asp-for="CategoryID" />
		<div asp-validation-summary="ModelOnly" class="text-danger">
		</div>
		<div class="mb-3 row">
			<div class="col-2">
				<label class="text-light fw-bold" asp-for="CategoryName"></label>
			</div>
			<div class="col-5">
				<input asp-for="CategoryName" class="form-control" />
			</div>
			<span asp-validation-for="CategoryName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<input type="submit" class="btn btn-RedShop" value="Update" />
			<a asp-action="Index" class="btn btn-gold">Back to List</a>
		</div>
	</div>
</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
	}
}
