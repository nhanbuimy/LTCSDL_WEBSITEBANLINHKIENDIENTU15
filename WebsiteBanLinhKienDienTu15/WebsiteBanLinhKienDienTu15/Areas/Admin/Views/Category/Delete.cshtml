@model WebsiteBanLinhKienDienTu15.Models.Category
@{
	ViewData["Title"] = "Delete";
}
<br />

<h2 class="text-light">Delete Category</h2>

@if (!string.IsNullOrEmpty(ViewBag.DeleteCategoryError))
{
	<div class="alert alert-danger">@ViewBag.DeleteCategoryError</div>
}

<form asp-action="Delete" method="post">
	<div class="p-4 rounded border">
		<input type="hidden" asp-for="CategoryID" />
		<div asp-validation-summary="ModelOnly" class="text-danger">
		</div>
		<div class="mb-3 row">
			<div class="col-2">
				<label class="text-light fw-bold" asp-for="CategoryName"></label>
			</div>
			<div class="col-5">
				<input asp-for="CategoryName" readonly="readonly" class="form-control" />
			</div>
			<span asp-validation-for="CategoryName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<input type="hidden" name="id" value="@Model.CategoryID" />
			<input type="submit" asp-action="Delete" asp-route-id="@Model.CategoryID" class="btn btn-RedShop" value="Delete" onclick="return confirm('Are you sure you want to delete this category?');" />
			<a asp-action="Index" class="btn btn-gold">Back to List</a>
		</div>
	</div>
</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
	}
}
