@model WebsiteBanLinhKienDienTu15.Models.Category
@{
	ViewData["Title"] = "Details";
}
<br />

<h2 class="text-light">Category Details</h2>
<form asp-action="Details" method="post">
	<div class="p-4 rounded border">
		<div asp-validation-summary="ModelOnly" class="text-danger">
		</div>
		<div class="mb-3 row">
			<div class="col-2">
				<label class="text-light fw-bold" asp-for="CategoryName">Category</label>
			</div>
			<div class="col-5">
				<input asp-for="CategoryName" readonly="readonly" class="form-control" />
			</div>
			<span asp-validation-for="CategoryName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			
			<a asp-action="Edit" asp-route-id="@Model.CategoryID" class="btn btn-RedShop">Edit</a>
			<a asp-action="Index" class="btn btn-gold">Back to List</a>
			@* <input type="submit" class="btn btn-success" value="Back to List" /> *@
		</div>
	</div>
</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
	}
}
