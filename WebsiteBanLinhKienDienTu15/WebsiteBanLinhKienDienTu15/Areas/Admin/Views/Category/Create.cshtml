@model WebsiteBanLinhKienDienTu15.Models.Category
@{
	ViewData["Title"] = "Create";
}
<br />

<h2 class="text-light">Create Category</h2>
<form asp-action="Create" method="post">
	<div class="p-4 rounded border text-light fw-bold">
		<div asp-validation-summary="ModelOnly" class="text-danger">

		</div>
		<div class="mb-3 row">
			<div class="col-2">
				<label asp-for="CategoryName"></label>
			</div>
			<div class="col-5">
				<input asp-for="CategoryName" class="form-control" />
			</div>
			<span asp-validation-for="CategoryName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<input type="submit" class="btn btn-RedShop" value="Save" />
			<a asp-action="Index" class="btn btn-gold">Back to List</a>
		</div>
	</div>
</form>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}
}
