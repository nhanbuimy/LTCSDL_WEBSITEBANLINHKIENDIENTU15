@model WebsiteBanLinhKienDienTu15.Models.SpecialTag
@{
	ViewData["Title"] = "Details";
}
<br />

<h2 class="text-light">Brand Details</h2>
<form asp-action="Details" method="post">
	<div class="p-4 rounded border">
		<div asp-validation-summary="ModelOnly" class="text-danger">
		</div>
		<div class="mb-3 row text-light fw-bold">
			<div class="col-2">
				<label asp-for="SpecialTagName">Brand</label>
			</div>
			<div class="col-5">
				<input asp-for="SpecialTagName" readonly="readonly" class="form-control" />
			</div>
			<span asp-validation-for="SpecialTagName" class="text-danger"></span>
		</div>
		<div class="mb-3">

			<a asp-action="Edit" asp-route-id="@Model.SpecialTagID" class="btn btn-RedShop">Edit</a>
			<a asp-action="Index" class="btn btn-gold">Back to List</a>
		</div>
	</div>
</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
	}
}
