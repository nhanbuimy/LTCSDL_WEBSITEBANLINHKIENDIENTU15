@model WebsiteBanLinhKienDienTu15.Models.SpecialTag
@{
	ViewData["Title"] = "Delete";
}
<br />

<h2 class="text-light">Delete Brand</h2>

@if (!string.IsNullOrEmpty(ViewBag.DeleteSpecialTagError))
{
	<div class="alert alert-danger">@ViewBag.DeleteSpecialTagError</div>
}

<form asp-action="Delete" method="post">
	<div class="p-4 rounded border text-light fw-bold">
		<input type="hidden" asp-for="SpecialTagID" />
		<div asp-validation-summary="ModelOnly" class="text-danger">
		</div>
		<div class="mb-3 row">
			<div class="col-2">
				<label asp-for="SpecialTagName">Brand</label>
			</div>
			<div class="col-5">
				<input asp-for="SpecialTagName" readonly="readonly" class="form-control" />
			</div>
			<span asp-validation-for="SpecialTagName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<input type="hidden" name="id" value="@Model.SpecialTagID" />
			<input type="submit" asp-action="Delete" asp-route-id="@Model.SpecialTagID" class="btn btn-RedShop" value="Delete" onclick="return confirm('Are you sure you want to delete this tag?');" />
			<a asp-action="Index" class="btn btn-gold">Back to List</a>
		</div>
	</div>
</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
	}
}
