@model WebsiteBanLinhKienDienTu15.Models.Product
@{
	ViewData["Title"] = "Create";
}
<br />

<h2 class="text-light">Add New Product</h2>
<form asp-action="Create" method="post" enctype="multipart/form-data">
	<div class="p-4 rounded border text-light fw-bold">
		<div asp-validation-summary="ModelOnly" class="text-danger">
		</div>
		<h3 class="text-danger">@ViewBag.message</h3>
		<div class="mb-3 row">
			<div class="col-2">
				<label asp-for="ProductName"></label>
			</div>
			<div class="col-5">
				<input asp-for="ProductName" class="form-control" placeholder="Product name..." />
			</div>
			<span asp-validation-for="ProductName" class="text-danger"></span>
		</div>
		<div class="mb-3 row">
			<div class="col-2">
				<label asp-for="Price"></label>
			</div>
			<div class="col-5">
				<input asp-for="Price" class="form-control" placeholder="Price..." />
			</div>
			<span asp-validation-for="Price" class="text-danger"></span>
		</div>
		<div class="mb-3 row">
			<div class="col-2">
				<label asp-for="Image"></label>
			</div>
			<div class="col-5">
				<input asp-for="Image" class="form-control" type="file" />
			</div>
			@* <span asp-validation-for="Image" class="text-danger"></span> *@
		</div>
		<div class="mb-3 row">
			<div class="col-2">
				<label asp-for="ProductColor"></label>
			</div>
			<div class="col-5">
				<input asp-for="ProductColor" class="form-control" placeholder="Product color..." />
			</div>
			@* <span asp-validation-for="ProductColor" class="text-danger"></span> *@
		</div>
		<div class="mb-3 row">
			<div class="col-2">
				<label asp-for="CategoryID"></label>
			</div>
			<div class="col-5">
				<select asp-for="CategoryID" asp-items="ViewBag.categoryID" class="form-control"></select>
				@* <input asp-for="CategoryID" class="form-control" /> *@
			</div>
			<span asp-validation-for="CategoryID" class="text-danger"></span>
		</div>
		<div class="mb-3 row">
			<div class="col-2">
				<label asp-for="SpecialTagID"></label>
			</div>
			<div class="col-5">
				<select asp-for="SpecialTagID" asp-items="ViewBag.tagID" class="form-control"></select>
				@* <input asp-for="SpecialTagID" class="form-control" /> *@
			</div>
			<span asp-validation-for="SpecialTagID" class="text-danger"></span>
		</div>
		<div class="mb-3 row">
			<div class="col-2">
				<label asp-for="IsAvailable"></label>
			</div>
			<div class="col-5">
				<input asp-for="IsAvailable" type="checkbox" checked />
			</div>
			<span asp-validation-for="IsAvailable" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<input type="submit" class="btn btn-RedShop" value="Save" />
			<a asp-action="Index" class="btn btn-gold">Back to List</a>
		</div>
	</div>
</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
	}
}
